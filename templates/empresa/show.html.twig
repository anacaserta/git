{% extends 'base.html.twig' %}

{% block title %}Empresa{% endblock %}

{% block body %}
    <h1>Empresa</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Titulo</th>
                <td>{{ empresa.titulo }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ empresa.telefone }}</td>
            </tr>
            <tr>
                <th>Endereco</th>
                <td>{{ empresa.endereco }}</td>
            </tr>
            <tr>
                <th>Cidade</th>
                <td>{{ empresa.cidade }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ empresa.estado }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ empresa.descricao }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ empresa.categoria ? empresa.categoria|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Cep</th>
                <td>{{ empresa.cep }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('empresa_index') }}">back to list</a>

    <a href="{{ path('empresa_edit', {'id': empresa.id}) }}">edit</a>

    {{ include('empresa/_delete_form.html.twig') }}
